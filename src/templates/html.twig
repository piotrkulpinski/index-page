{% extends 'layouts/default.twig' %}
{% set pageName = 'HTML' %}

{% block content %}
  <h2 class="heading">Template files:</h2>

  <ul class="file-list">
    {% for file in files %}
      <li class="file-list__element">
        <div class="file-list__title">
          <i class="fa fa-file-text-o"></i>
          <a href="#">{{ file }}</a>
        </div>

        <div class="file-types">
          <p>{{ file | lower | split(' ') | join('-') }}.html</p>
        </div>
      </li>
    {% endfor %}
  </ul>
{% endblock %}
