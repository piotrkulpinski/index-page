{% extends 'layouts/default.twig' %}
{% set pageName = 'Email' %}

{% block content %}
  <h2 class="heading">Email templates:</h2>

  <ul class="file-list">
    {% for file in files %}
      <li class="file-list__element">
        <div class="file-list__title">
          <i class="fa fa-file-text-o"></i>
          <strong>{{ file }}</strong>
        </div>

        <div class="file-types">
          <h4>Types:</h4>
          <ul>
            <li><a href="#"><i class="fa fa-html5"></i> HTML</a></li>
            <li><a href="#"><i class="fa fa-align-left"></i> TXT</a></li>
          </ul>
        </div>
      </li>
    {% endfor %}
  </ul>
{% endblock %}
